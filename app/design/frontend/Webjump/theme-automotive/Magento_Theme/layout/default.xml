<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo_volks.png</argument>
                <argument name="logo_alt" xsi:type="string">Logo automotivo</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="header.panel" remove="true" />
        <move element="header.links" destination="header-wrapper" after="top.search"/>
        <move element="minicart" destination="header-wrapper" after="-"/>
    </body>
</page>
